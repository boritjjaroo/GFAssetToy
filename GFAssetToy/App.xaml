<Application x:Class="GFAssetToy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GFAssetToy"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        <DataTemplate x:Key="EntrySize">
            <TextBlock TextAlignment="Right" HorizontalAlignment="Right" Text="{Binding size}"/>
        </DataTemplate>
        <DataTemplate x:Key="ObjectSize">
            <TextBlock TextAlignment="Right" HorizontalAlignment="Right" Text="{Binding size}"/>
        </DataTemplate>
    </Application.Resources>
</Application>
